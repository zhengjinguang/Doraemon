<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffffff"
	>
	<LinearLayout
		android:id="@+id/custom3"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="本软件仅供娱乐，如有疑问请联系:ayin1989dy@qq.com"
				/>
		<TextView
			android:id="@+id/cst3_logonstatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>
		<TextView
			android:id="@+id/cst3_logonname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>
		<!--
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		>
			<TextView
				android:id="@+id/cst3_logonscore"
				android:layout_marginRight="10px"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<Button
				android:id="@+id/cst3_getscore"
				android:layout_marginLeft="10px"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="~获取积分~"
			/>
			<Button
				android:id="@+id/cst3_refreshscore"
				android:layout_marginLeft="10px"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="~刷新积分~"
			/>
		</LinearLayout>
		-->
		<TextView
			android:text="用户名："
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:focusable="true" android:focusableInTouchMode="true"
		/>
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/cst3_username"
			android:maxLength="20"
		/>
		<TextView
			android:text="密码："
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>
		<EditText
			android:password="true"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/cst3_userpwd"
			android:maxLength="20"
		/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10px"
		>
			<TextView
				android:text="自动登录："
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
			/>
			<CheckBox
				android:id="@+id/cst3_checkBox" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
			/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10px"
			android:gravity="center_horizontal"
		>
			<Button
				android:layout_marginRight="20px"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:id="@+id/cst3_regist"
				android:text="~注册~"
			/>
			<Button
				android:layout_marginLeft="20px"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:id="@+id/cst3_logon"
				android:text="~登录~"
			/>
		</LinearLayout>
		<View android:layout_width="match_parent"
			android:layout_height="8dip"
			android:background="#80808080" 
		/>
		<Button
			android:background="#FFFFFFFF"
			android:padding="10px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="~点击我的消息(30天内)~"
			android:id="@+id/cst3_btnMsg"
		/>
		<View android:layout_width="match_parent"
			android:layout_height="4dip"
			android:background="#80808080" 
		/>
		<ListView
			android:cacheColorHint="@android:color/transparent"
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:id="@+id/cst3_listview"
		/>
	</LinearLayout>
</ScrollView>